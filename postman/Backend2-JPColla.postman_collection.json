{
  "info": {
    "name": "Backend2 JPcolla",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "JWT Auth",
      "item": [
        {
          "name": "Register User (JWT)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/users/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"{{$randomFirstName}}\",\n  \"last_name\": \"{{$randomLastName}}\",\n  \"email\": \"{{userEmail}}\",\n  \"age\": {{$randomInt}},\n  \"password\": \"{{userPassword}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.token) pm.environment.set('jwtToken', json.token);",
                  "if (json && json.user) pm.environment.set('userId', json.user._id || json.user.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Login User (JWT)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/users/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.token) pm.environment.set('jwtToken', json.token);",
                  "if (json && json.user) pm.environment.set('userId', json.user._id || json.user.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Current User (JWT)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
            ],
            "url": "{{baseUrl}}/api/users/current"
          }
        },
        {
          "name": "Logout User (JWT)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
            ],
            "url": "{{baseUrl}}/api/users/logout"
          }
        }
      ]
    },
    {
