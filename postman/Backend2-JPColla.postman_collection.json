            }
          }
        }
      ]
    },
    {
      "name": "Password Reset (JWT)",
      "item": [
        {
          "name": "Request Reset",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/password/forgot",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\"\n}"
            }
          }
        },
        {
          "name": "Validate Reset Token",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/password/validate-token/{{resetToken}}"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/api/password/reset",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{resetToken}}\",\n  \"newPassword\": \"{{userPassword}}\",\n  \"confirmPassword\": \"{{userPassword}}\"\n}"
            }
          }
        },
        {
          "name": "Change Password (Auth)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
            ],
            "url": "{{baseUrl}}/api/password/change",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"{{userPassword}}\",\n  \"newPassword\": \"{{userPassword}}\",\n  \"confirmPassword\": \"{{userPassword}}\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Products API",
      "item": [
        {
          "name": "Get Products",
