<div class="container">
    <div class="login-box">
        <h1>游댏 Recuperar Contrase침a</h1>
        <p class="subtitle">Ingresa tu email para recibir un enlace de recuperaci칩n</p>
        
        <form id="forgotPasswordForm">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required placeholder="tu@email.com">
            </div>

            <button type="submit" class="btn-primary">Enviar Enlace de Recuperaci칩n</button>
        </form>

        <div id="message" class="message"></div>

        <div class="link-box">
            <p>Recordaste tu contrase침a? <a href="/users/login">Volver al login</a></p>
            <p>쯅o tienes cuenta? <a href="/users/register">Reg칤strate aqu칤</a></p>
        </div>
    </div>
</div>

<style>
    .subtitle {
        color: #666;
        margin-bottom: 20px;
        text-align: center;
    }
</style>

<script>
    document.getElementById('forgotPasswordForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const email = document.getElementById('email').value;
        const messageDiv = document.getElementById('message');
        
        try {
            const response = await fetch('/api/password/forgot', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email })
            });
            
            const data = await response.json();
            
            messageDiv.className = response.ok ? 'message success' : 'message error';
            messageDiv.textContent = data.message || 'Revisa tu email para continuar';
            
            if (response.ok) {
                document.getElementById('forgotPasswordForm').reset();
                setTimeout(() => {
                    window.location.href = '/users/login';
                }, 2000);
            }
        } catch (error) {
            messageDiv.className = 'message error';
            messageDiv.textContent = 'Error al enviar solicitud';
        }
    });
</script>
