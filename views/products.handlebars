    <div class="header">
        <div class="welcome-message">
            <div class="user-avatar">
                {{#if user.avatar}}
                <img src="{{user.avatar}}" alt="Avatar" class="avatar-img">
                {{else}}
                <div class="avatar-placeholder">{{substring user.firstName 0 1}}</div>
                {{/if}}
            </div>
            <div>
                <h1>Bienvenido, {{user.firstName}} {{user.lastName}}</h1>
                <p class="user-info">
                    {{#if user.provider}}
                    <span class="provider-badge">
                        {{#if (eq user.provider 'github')}}
                        <svg height="14" width="14" viewBox="0 0 16 16" fill="currentColor">
                            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
                        </svg>
                        GitHub
                        {{else}}
                        üìß Local
                        {{/if}}
                    </span>
                    {{/if}}
                    Email: {{user.email}} 
                    {{#if user.age}}| Edad: {{user.age}}{{/if}}
                    | Rol: <span class="role-badge {{#if isAdmin}}admin{{else}}user{{/if}}">{{user.role}}</span>
                </p>
            </div>
        </div>
        <div class="header-actions">
            <a href="/cart" class="btn-primary">üõí Ver Carrito</a>
            <a href="/users/current" class="btn-primary">üë§ Mi Perfil</a>
            <button id="logoutBtn" class="btn-secondary">Cerrar Sesi√≥n</button>
        </div>
    </div>

    <div class="products-section">
        <h2>Cat√°logo de Productos</h2>
        
        {{#if isAdmin}}
        <div class="admin-panel">
            <p class="admin-notice">‚≠ê Tienes permisos de administrador - Puedes gestionar productos</p>
            <a href="/products/manage" class="btn-primary">üì¶ Gestionar Inventario</a>
        </div>
        {{/if}}

        <div id="productsContainer" class="products-grid">
            <p style="text-align: center; color: #666; padding: 40px;">Cargando productos...</p>
        </div>
    </div>
</div>

<script>
    let currentUserId = null;
    let isAdmin = {{isAdmin}};

    // Obtener usuario actual
    async function getCurrentUser() {
        try {
            console.log('[USUARIO] Obteniendo usuario actual...');
            const res = await fetch('/api/users/current', {
                credentials: 'include',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            console.log('[USUARIO] C√≥digo de respuesta:', res.status);
            
            if (!res.ok) {
                console.error('[USUARIO] Error:', res.statusText);
                return null;
            }

            const data = await res.json();
            console.log('[USUARIO] Datos recibidos:', data);

            if (data && data.user && (data.user._id || data.user.id)) {
                currentUserId = data.user._id || data.user.id;
                console.log('[USUARIO] ID asignado:', currentUserId);
                return data.user;
            } else {
                console.error('[USUARIO] Estructura incorrecta de respuesta');
                return null;
            }
        } catch (err) {
            console.error('[USUARIO] Error:', err);
        }
        return null;
    }

    // Cargar productos desde la API
    async function loadProducts() {
        try {
            const response = await fetch('/api/products', {
                credentials: 'include'
            });

            if (!response.ok) {
                throw new Error('Error al cargar productos');
            }

            const data = await response.json();
            const products = data.products || [];

            const container = document.getElementById('productsContainer');

            if (products.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #999; padding: 40px;">No hay productos disponibles</p>';
                return;
            }

            // Renderizar productos
            container.innerHTML = products.map(product => `
                <div class="product-card">
                    ${product.thumbnail
                        ? `<div class="product-image"><img src="${product.thumbnail}" alt="${product.title}"></div>`
                        : `<div class="product-image placeholder">Sin imagen</div>`
                    }
                    <h3>${product.title}</h3>
                    <div class="product-info">
                        <p class="price">$${parseFloat(product.price).toFixed(2)}</p>
                        <p class="stock">
                            ${product.stock > 5 
                                ? `‚úì En stock: ${product.stock} unidades`
                                : product.stock > 0
                                ? `‚ö†Ô∏è Pocas unidades: ${product.stock}`
                                : '‚úó Sin stock'
                            }
                        </p>
                        <p class="code" style="font-size: 12px; color: #999; margin-top: 8px;">C√≥digo: ${product.code || 'N/A'}</p>
                    </div>
                    <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                        ${isAdmin 
                            ? `<a href="/products/manage" class="btn-small btn-manage" style="text-decoration: none; flex: 1; min-width: 120px; display: flex; align-items: center; justify-content: center;">üìä Inventario</a>`
                            : `<button class="btn-primary btn-add-cart" 
                                data-id="${product._id}" 
                                data-price="${product.price}" 
                                data-name="${product.title}"
                                ${product.stock > 0 ? '' : 'disabled'}
                                style="flex: 1; min-width: 120px;">
                                ${product.stock > 0 ? 'üõí Agregar al Carrito' : 'No Disponible'}
                            </button>`
                        }
                    </div>
                </div>
            `).join('');

            // Agregar event listeners para los botones
            document.querySelectorAll('.btn-add-cart').forEach(btn => {
                btn.addEventListener('click', handleAddToCart);
            });
        } catch (error) {
            console.error('Error cargando productos:', error);
            document.getElementById('productsContainer').innerHTML = 
                '<p style="color: #e74c3c; text-align: center;">Error al cargar productos</p>';
        }
    }

    // Manejar agregar al carrito
    async function handleAddToCart(e) {
        console.log('[CARRITO] Intentando agregar al carrito. currentUserId:', currentUserId);

        if (!currentUserId) {
            console.log('[CARRITO] Sin ID de usuario, verificando nuevamente...');
            // Intentar obtener el usuario nuevamente si no se ha cargado
            const user = await getCurrentUser();
            if (!currentUserId && !user) {
                console.log('[CARRITO] No se pudo obtener ID de usuario, redirigiendo');
                alert('Por favor, inicia sesi√≥n');
                window.location.href = '/users/login';
                return;
            }
        }

        const productId = e.target.dataset.id;
        const price = parseFloat(e.target.dataset.price);
        const name = e.target.dataset.name;

        console.log('[CARRITO] Datos:', { productId, price, name, userId: currentUserId });

        try {
            const response = await fetch(`/api/carts/${currentUserId}/products`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'include',
                body: JSON.stringify({ 
                    productId, 
                    quantity: 1, 
                    price, 
                    name 
                })
            });

            const data = await response.json();
            console.log('[CARRITO] Respuesta:', data);

            if (data.status === 'success') {
                alert('‚úì Producto agregado al carrito');
                // Recargar productos para actualizar stock
                loadProducts();
            } else {
                alert('‚úó Error: ' + (data.message || 'Error desconocido'));
            }
        } catch (error) {
            console.error('[CARRITO] Error:', error);
            alert('‚úó Error al agregar al carrito: ' + error.message);
        }
    }

    // Cargar usuario y productos cuando el DOM est√© listo
    document.addEventListener('DOMContentLoaded', async () => {
        await getCurrentUser();
        loadProducts();
    });

    // Logout
    document.getElementById('logoutBtn').addEventListener('click', async () => {
        try {
            const response = await fetch('/api/users/logout', {
                method: 'POST',
                credentials: 'include'
            });

            const data = await response.json();

            if (data.status === 'success') {
                window.location.href = '/users/login';
            }
        } catch (error) {
            console.error('Error al cerrar sesi√≥n:', error);
        }
    });
</script>