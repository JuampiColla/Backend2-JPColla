<div class="container">
    <div class="header">
        <div class="welcome-message">
            <div class="user-avatar">
                {{#if user.avatar}}
                <img src="{{user.avatar}}" alt="Avatar" class="avatar-img">
                {{else}}
                <div class="avatar-placeholder">{{substring user.firstName 0 1}}</div>
                {{/if}}
            </div>
            <div>
                <h1>Tu Carrito</h1>
                <p class="user-info">
                    {{user.firstName}} {{user.lastName}} | {{user.email}}
                </p>
            </div>
        </div>
        <div class="header-actions">
            <a href="/products" class="btn-primary">‚¨ÖÔ∏è Seguir comprando</a>
            <a href="/users/current" class="btn-primary">üë§ Mi Perfil</a>
        </div>
    </div>

    <div class="cart-section">
        <div id="cartContent">
            Cargando carrito...
        </div>
    </div>
</div>

<style>
    .cart-section {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .cart-section h2 {
        color: #333;
        margin-bottom: 20px;
    }

    .cart-list {
        display: grid;
        gap: 15px;
    }

    .cart-item {
        border: 2px solid #eee;
        border-radius: 8px;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #f9f9f9;
    }

    .cart-item-info {
        flex: 1;
    }

    .cart-item-info > div {
        margin-bottom: 5px;
        color: #333;
    }

    .cart-item-info strong {
        color: #667eea;
    }

    .btn-remove {
        padding: 8px 15px;
        background: #ff6b6b;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 13px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .btn-remove:hover {
        background: #ee5a52;
    }

    .cart-total {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #eee;
        text-align: right;
    }

    .cart-total p {
        font-size: 20px;
        font-weight: 600;
        color: #333;
    }

    .cart-empty {
        text-align: center;
        padding: 40px;
        color: #666;
    }

    .btn-small {
        padding: 8px 15px;
        background: #667eea;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 13px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .btn-small:hover {
        background: #764ba2;
    }
</style>

<script>
    // Variable global para almacenar el ID del usuario
    let currentUserId = null;

    // Obtener usuario actual desde el servidor
    async function getCurrentUser() {
        try {
            const res = await fetch('/api/users/current', {
                credentials: 'include'
            });
            
            if (res.ok) {
                const data = await res.json();
                if (data.user && data.user._id) {
                    currentUserId = data.user._id;
                    console.log('‚úì Usuario obtenido desde servidor:', currentUserId);
                    return data.user;
                }
            }
            
            // Fallback: intentar decodificar JWT desde la cookie
            console.log('Intentando decodificar JWT desde cookie...');
            const cookies = document.cookie.split(';');
            for (let cookie of cookies) {
                const [name, value] = cookie.trim().split('=');
                if (name === 'currentUser') {
                    try {
                        const parts = decodeURIComponent(value).split('.');
                        if (parts.length === 3) {
                            const decoded = JSON.parse(atob(parts[1]));
                            if (decoded.id) {
                                currentUserId = decoded.id;
                                console.log('‚úì Usuario obtenido desde JWT:', currentUserId);
                                return decoded;
                            }
                        }
                    } catch (e) {
                        console.error('Error decodificando JWT:', e);
                    }
                }
            }
            return null;
        } catch (err) {
            console.error('Error obteniendo usuario:', err);
            return null;
        }
    }

    async function loadCart() {
        try {
            if (!currentUserId) {
                document.getElementById('cartContent').innerHTML = '<div class="cart-empty"><p>Cargando carrito...</p></div>';
                return;
            }

            console.log('Loading cart for userId:', currentUserId);
            const res = await fetch(`/api/carts/${currentUserId}`, {
                credentials: 'include' // Incluir cookies en la solicitud
            });
            console.log('Cart response status:', res.status);
            
            if (!res.ok) {
                console.error('Fetch error:', res.statusText);
                document.getElementById('cartContent').innerHTML = '<div class="cart-empty"><p>Error cargando carrito: ' + res.statusText + '</p><a href="/products" class="btn-primary">Ir a Productos</a></div>';
                return;
            }

            const data = await res.json();
            console.log('Cart data:', data);
            
            if (data.status !== 'success') {
                console.error('API error:', data.message);
                document.getElementById('cartContent').innerHTML = '<div class="cart-empty"><p>Error: ' + data.message + '</p><a href="/products" class="btn-primary">Ir a Productos</a></div>';
                return;
            }

            const cart = data.cart;
            if (!cart || !cart.products || !cart.products.length) {
                document.getElementById('cartContent').innerHTML = '<div class="cart-empty"><p>Tu carrito est√° vac√≠o</p><a href="/products" class="btn-primary">Ir a Productos</a></div>';
                return;
            }

            const list = document.createElement('div');
            list.className = 'cart-list';

            cart.products.forEach(item => {
                const el = document.createElement('div');
                el.className = 'cart-item';
                const productPrice = item.price || 0;
                const itemTotal = productPrice * item.quantity;
                el.innerHTML = `
                    <div class="cart-item-info">
                        <div><strong>${item.name || `Producto ${item.productId}`}</strong></div>
                        <div style="color: #666; font-size: 13px;">ID: ${item.productId}</div>
                        <div>Precio: $${productPrice}</div>
                        <div><strong>Cantidad:</strong> ${item.quantity} unidades</div>
                        <div style="color: #667eea; font-weight: 600;">Subtotal: $${itemTotal}</div>
                    </div>
                    <button class="btn-remove" data-product-id="${item.productId}">üóëÔ∏è Eliminar</button>
                `;
                list.appendChild(el);
            });

            const totalEl = document.createElement('div');
            totalEl.className = 'cart-total';
            totalEl.innerHTML = `<p>üí∞ Total: $${cart.totalPrice || 0}</p>`;

            // Agregar bot√≥n de compra
            const purchaseBtn = document.createElement('button');
            purchaseBtn.className = 'btn-primary';
            purchaseBtn.textContent = 'ÔøΩ Procesar Compra';
            purchaseBtn.style.marginTop = '20px';
            purchaseBtn.addEventListener('click', async () => {
                if (confirm('¬øDeseas procesar la compra de $' + cart.totalPrice + '?')) {
                    try {
                        const purchaseRes = await fetch(`/api/carts/${currentUserId}/purchase`, {
                            method: 'POST',
                            credentials: 'include'
                        });
                        const purchaseData = await purchaseRes.json();
                        if (purchaseData.status === 'success') {
                            alert('‚úÖ Compra procesada exitosamente\n\nC√≥digo de ticket: ' + purchaseData.ticket.code + '\nMonto: $' + purchaseData.ticket.amount);
                            location.href = '/products';
                        } else {
                            alert('‚ùå Error: ' + purchaseData.message);
                        }
                    } catch (err) {
                        console.error('Error en compra:', err);
                        alert('‚ùå Error al procesar compra');
                    }
                }
            });

            document.getElementById('cartContent').innerHTML = '';
            document.getElementById('cartContent').appendChild(list);
            document.getElementById('cartContent').appendChild(totalEl);
            document.getElementById('cartContent').appendChild(purchaseBtn);

            document.querySelectorAll('.btn-remove').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    const productId = e.target.dataset.productId;
                    try {
                        await fetch(`/api/carts/${currentUserId}/products/${productId}`, {
                            method: 'DELETE',
                            credentials: 'include'
                        });
                        loadCart();
                    } catch (err) {
                        console.error(err);
                        alert('Error al eliminar producto');
                    }
                });
            });

        } catch (err) {
            console.error('Fetch error:', err);
            document.getElementById('cartContent').innerHTML = '<div class="cart-empty"><p>Error cargando carrito: ' + err.message + '</p></div>';
        }
    }

    // Cargar usuario actual y luego el carrito cuando el DOM est√© listo
    document.addEventListener('DOMContentLoaded', async () => {
        const user = await getCurrentUser();
        if (user) {
            loadCart();
        }
    });
</script>