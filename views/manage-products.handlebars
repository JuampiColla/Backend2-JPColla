<script>
  let currentProductId = null;

  async function loadProducts() {
    try {
      const response = await fetch('/api/products');
      if (!response.ok) throw new Error('Error al cargar productos');
      
      const data = await response.json();
      const products = data.products || [];
      
      const productsList = document.getElementById('productsList');
      
      if (products.length === 0) {
        productsList.innerHTML = '<p class="loading">No hay productos. ¬°Crea uno nuevo!</p>';
        return;
      }

      productsList.innerHTML = products.map(product => `
        <div class="product-card">
          <div class="product-header">
            <h3 class="product-title">${product.title}</h3>
            <span class="product-code">${product.code || 'N/A'}</span>
          </div>
          
          <p class="product-description">${product.description}</p>
          
          <div class="product-details">
            <div class="detail-item">
              <span class="detail-label">Precio</span>
              <span class="detail-value">$${product.price.toFixed(2)}</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Stock</span>
              <span class="detail-value ${product.stock < 5 ? 'stock-low' : 'stock-normal'}">
                ${product.stock} unidades
              </span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Categor√≠a</span>
              <span class="detail-value">${product.category || 'general'}</span>
            </div>
          </div>
          
          <div class="product-actions">
            <button
              class="btn-edit-stock"
              data-id="${product._id}"
              data-title="${encodeURIComponent(product.title || '')}"
              data-stock="${product.stock}"
              data-description="${encodeURIComponent(product.description || '')}"
              data-thumbnail="${encodeURIComponent(product.thumbnail || '')}"
              onclick="openEditStockModalFromButton(this)"
            >
              ‚úèÔ∏è Editar
            </button>
            <button class="btn-delete-product" onclick="deleteProduct('${product._id}', '${product.title}')">
              üóëÔ∏è Eliminar
            </button>
          </div>
        </div>
      `).join('');
    } catch (error) {
      console.error('Error:', error);
      showMessage('Error al cargar productos', 'error');
    }
  }

  function toggleCreateProductForm() {
    const form = document.getElementById('createProductForm');
    form.style.display = form.style.display === 'none' ? 'block' : 'none';
    if (form.style.display === 'block') {
      document.getElementById('newTitle').focus();
    }
  }

  async function handleCreateProduct(event) {
    event.preventDefault();
    
    const productData = {
      title: document.getElementById('newTitle').value,
      price: parseFloat(document.getElementById('newPrice').value),
      stock: parseInt(document.getElementById('newStock').value),
      category: document.getElementById('newCategory').value || 'general',
      code: document.getElementById('newCode').value,
      thumbnail: document.getElementById('newThumbnail').value || null,
      description: document.getElementById('newDescription').value,
      featured: document.getElementById('newFeatured').checked
    };

    try {
      const response = await fetch('/api/products', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(productData)
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.message || 'Error al crear producto');
      }

      showMessage('‚úÖ Producto creado exitosamente', 'success');
      document.querySelector('#createProductForm form').reset();
      toggleCreateProductForm();
      loadProducts();
    } catch (error) {
      console.error('Error:', error);
      showMessage(error.message || 'Error al crear producto', 'error');
    }
  }

  function openEditStockModalFromButton(button) {
    const productId = button.dataset.id;
    const productName = decodeURIComponent(button.dataset.title || '');
    const currentStock = parseInt(button.dataset.stock || '0');
    const currentDescription = decodeURIComponent(button.dataset.description || '');
    const currentThumbnail = decodeURIComponent(button.dataset.thumbnail || '');
    currentProductId = productId;
    document.getElementById('modalProductName').textContent = productName;
    document.getElementById('currentStock').value = currentStock;
    document.getElementById('newStockValue').value = currentStock;
    document.getElementById('editDescription').value = currentDescription || '';
    document.getElementById('editThumbnail').value = currentThumbnail || '';
    document.getElementById('editStockModal').style.display = 'flex';
    document.getElementById('newStockValue').focus();
  }

  function closeEditStockModal() {
    document.getElementById('editStockModal').style.display = 'none';
    currentProductId = null;
  }

  async function handleUpdateStock() {
    if (!currentProductId) return;

    const newStock = parseInt(document.getElementById('newStockValue').value);
    const newDescription = document.getElementById('editDescription').value.trim();
    const newThumbnail = document.getElementById('editThumbnail').value.trim();
    if (!newDescription) {
      showMessage('La descripcion es requerida', 'error');
      return;
    }
    
    try {
      const response = await fetch(`/api/products/${currentProductId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          stock: newStock,
          description: newDescription,
          thumbnail: newThumbnail || null
        })
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.message || 'Error al actualizar stock');
      }

      showMessage('‚úÖ Producto actualizado exitosamente', 'success');
      closeEditStockModal();
      loadProducts();
    } catch (error) {
      console.error('Error:', error);
      showMessage(error.message || 'Error al actualizar stock', 'error');
    }
  }

  async function deleteProduct(productId, productName) {
    if (!confirm(`¬øEliminar producto "${productName}"?`)) return;

    try {
      const response = await fetch(`/api/products/${productId}`, {
        method: 'DELETE'
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.message || 'Error al eliminar producto');
      }

      showMessage('‚úÖ Producto eliminado exitosamente', 'success');
      loadProducts();
    } catch (error) {
      console.error('Error:', error);
      showMessage(error.message || 'Error al eliminar producto', 'error');
    }
  }

  function showMessage(message, type) {
    const messageDiv = document.getElementById('statusMessage');
    messageDiv.textContent = message;
    messageDiv.className = `status-message ${type}`;
    messageDiv.style.display = 'block';

    setTimeout(() => {
      messageDiv.style.display = 'none';
    }, 5000);
  }

  // Cerrar modal con ESC
  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      closeEditStockModal();
    }
  });

  // Cargar productos al abrir la p√°gina
  document.addEventListener('DOMContentLoaded', () => {
    loadProducts();
  });
</script>
