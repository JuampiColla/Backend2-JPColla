<div class="manage-products-container">
  <div class="header-section">
    <div class="title-group">
      <h1>üì¶ Gesti√≥n de Productos</h1>
      <p class="subtitle">Administra el inventario y crea nuevos productos</p>
    </div>
    <div class="actions-group">
      <button class="btn-primary" onclick="toggleCreateProductForm()">‚ûï Nuevo Producto</button>
      <a href="/products" class="btn-secondary">‚Üê Volver a Productos</a>
    </div>
  </div>

  <!-- Formulario para crear nuevo producto -->
  <div id="createProductForm" class="product-form-section" style="display: none;">
    <div class="form-card">
      <h2>Crear Nuevo Producto</h2>
      <form onsubmit="handleCreateProduct(event)">
        <div class="form-grid">
          <div class="form-group">
            <label for="newTitle">T√≠tulo *</label>
            <input type="text" id="newTitle" required placeholder="Nombre del producto">
          </div>
          
          <div class="form-group">
            <label for="newPrice">Precio ($) *</label>
            <input type="number" id="newPrice" required step="0.01" min="0" placeholder="0.00">
          </div>

          <div class="form-group">
            <label for="newStock">Stock *</label>
            <input type="number" id="newStock" required min="0" placeholder="0">
          </div>

          <div class="form-group">
            <label for="newCategory">Categor√≠a</label>
            <input type="text" id="newCategory" placeholder="general">
          </div>

          <div class="form-group">
            <label for="newCode">C√≥digo Producto *</label>
            <input type="text" id="newCode" required placeholder="COD001">
          </div>

          <div class="form-group">
            <label for="newThumbnail">URL Imagen</label>
            <input type="url" id="newThumbnail" placeholder="https://...">
          </div>

          <div class="form-group full-width">
            <label for="newDescription">Descripci√≥n *</label>
            <textarea id="newDescription" required placeholder="Describe el producto..." rows="4"></textarea>
          </div>

          <div class="form-group full-width checkbox">
            <input type="checkbox" id="newFeatured">
            <label for="newFeatured">Producto destacado</label>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn-primary">üíæ Crear Producto</button>
          <button type="button" class="btn-secondary" onclick="toggleCreateProductForm()">Cancelar</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Mensajes de estado -->
  <div id="statusMessage" class="status-message" style="display: none;"></div>

  <!-- Lista de productos -->
  <div class="products-section">
    <h2>Productos en Inventario</h2>
    <div id="productsList" class="products-list">
      <p class="loading">Cargando productos...</p>
    </div>
  </div>
</div>

<!-- Modal para editar producto -->
<div id="editStockModal" class="modal" style="display: none;">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Actualizar Producto</h2>
      <button type="button" class="close-btn" onclick="closeEditStockModal()">&times;</button>
    </div>
    <div class="modal-body">
      <div class="form-group">
        <label>Producto: <span id="modalProductName"></span></label>
      </div>
      <div class="form-group">
        <label for="currentStock">Stock Actual</label>
        <input type="number" id="currentStock" readonly>
      </div>
      <div class="form-group">
        <label for="newStockValue">Nuevo Stock *</label>
        <input type="number" id="newStockValue" required min="0">
      </div>
      <div class="form-group">
        <label for="editThumbnail">URL Imagen</label>
        <input type="url" id="editThumbnail" placeholder="https://...">
      </div>
      <div class="form-group">
        <label for="editDescription">Descripcion *</label>
        <textarea id="editDescription" required rows="4" placeholder="Describe el producto..."></textarea>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn-primary" onclick="handleUpdateStock()">‚úÖ Actualizar Producto</button>
      <button type="button" class="btn-secondary" onclick="closeEditStockModal()">Cancelar</button>
    </div>
  </div>
</div>

